    .searchtbl{
          border: 1px;
        border-color: #9999FF;
        width:53%;
        height:245px;
    }
    .searchtbl tr{
        border-color:#9999FF;
    }
    .tdsearchoption{
         height:27px;
         background-color:#3A6DA4;
    }
    .tdpatientname {
        
        background-color: #3A6DA4;
        width: 36%;
        height: 49px;
    }
    .tdpatientnametxt{
        background-color: #0099CC;
        width: 26%;
        height: 49px;
    }
    .tdpatientnamex{
        background-color: #0099CC;
        width: 38%;
        height: 49px;
    }
    .tdsex{
         background-color: #3A6DA4;
        width: 36%;
        height: 41px;
    }
    .tdsexddl{
       background-color: #0099CC;
        width: 26%;
        height: 41px;
    }
    .tduse{
        background-color: #0099CC;
        width: 38%;
        height: 41px;
    }
    .tdssn{
         background-color: #3A6DA4;
        width: 36%;
        height: 46px;
    }
    .tdssntxt{
         background-color: #0099CC;
        width: 26%;
        height: 46px;
    }
    .tdssntxtex{
 background-color: #0099CC;
        width: 38%;
        height: 46px;
    }
    .tdpatientno{
        background-color: #3A6DA4;
        width: 36%;
        height: 45px;
    }
    .tdpatientnotxt{
        background-color: #0099CC;
